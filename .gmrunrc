# ~/.gmrunrc
# Thayer Williams - http://cinderwick.ca

# terminal info 
Terminal     =  urxvtc

TermExec     =  ${Terminal} -e
AlwaysInTerm =  ssh telnet ftp lynx mc vi vim man htop alsamixer mutt vifm mocp ncmpcpp

# history
History     =   512  # num of entries to save
ShowLast    =   1    # show last cmd when invoked

# autocompletion and tabbing
ShowDotFiles =  0    # autocomplete dotfiles (1 to enable)
TabTimeout   =  0    # ms before gmrun simulates a TAB press (0 disables)

# url handlers

# If the entered text is "http://www.google.com" then:
#   - %u gets replaced with the whole URL ("http://www.google.com")
#   - %s gets replaced with "//www.google.com".  This is useful for URL-s
#     like "man:printf" --> %s will get replaced with "printf"
URL_http    = /home/ok/Scripts/chrome.sh "%u"
URL_ftp     = /home/ok/Scripts/chrome.sh "%u"
URL_mailto  = /home/ok/Scripts/chrome.sh "%u"
URL_man     = ${TermExec} 'man %s'
URL_info    = ${TermExec} 'info %s'
URL_file    = nautilus %s
URL_readme  = ${TermExec} 'less /usr/doc/%s/README'
URL_sh      = sh -c '%s'
URL_bash    = bash -c '%s'

# extension handlers
EXT:doc,rtf = word %s
EXT:ps      = gv %s
EXT:pdf     = evince %s
EXT:tar,gz,zip,xz,jar,rar,iso = file-roller %s
EXT:txt,patch,diff,conf,rc,sh,pl,c,cc,cpp,h,java,html,htm,php,epl,tex,latex,js,css,xml,xsl,am,README,INSTALL,AUTHOR,xinitrc,bashrc,bash_profile,bash_logout,gmrunrc,Xresources,vimrc,muttrc, = gvim %s
EXT:mp4,flv,avi,mpeg,mpg,wmv,asf = vlc %s
EXT:gif,jpg,jpeg,png,svg,bmp,tif,tga,ico = gpicview %s
