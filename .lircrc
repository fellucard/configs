### VOLUME ###
begin
	button = VOL_UP
	prog   = irexec
	repeat = 1
	delay  = 5
	config = amixer -q set Master 2dB+
end
begin
	button = VOL_DOWN
	prog   = irexec
	repeat = 1
	delay  = 5
	config = amixer -q set Master 2dB-
end
begin
	button = MUTE
	prog   = irexec
	repeat = 0
	config = amixer -q set Master toggle
end

### MODES ###
begin
	remote = CD
