### VOLUME ###
begin
	button = VOL_UP
	prog   = irexec
	repeat = 1
	delay  = 5
	config = amixer -q set Master 2dB+
end
begin
	button = VOL_DOWN
	prog   = irexec
	repeat = 1
	delay  = 5
	config = amixer -q set Master 2dB-
end
begin
	button = MUTE
	prog   = irexec
	repeat = 0
	config = amixer -q set Master toggle
end

### MPLAYER ###
begin
   remote = CD
   button = PLAY
   prog   = mplayer
   repeat = 0
   config = pause
end
begin
   remote = CD
   button = PAUSE
   prog   = mplayer
   repeat = 0
   config = pause
end
begin
   remote = CD
   button = PREVIOUS
   prog   = mplayer
   repeat = 1
   delay  = 5
   config = seek -10
end
begin
   remote = CD
   button = NEXT
   prog   = mplayer
   repeat = 1
   delay  = 5
   config = seek 10
end
begin
   remote = CD
   button = STOP
   prog   = mplayer
   repeat = 0
   config = stop
end
begin
   remote = CD
   button = 0
   prog   = mplayer
   repeat = 0
   config = osd\nosd
end
