out_to_x no
out_to_console yes
update_interval 2.0

TEXT
${execi 10 /home/ok/bin/conky-nowplaying}\
${execi 10000 echo -e "\x01"}Cpu${execi 10000 echo -e "\x02"}${cpu} \
${execi 10000 echo -e "\x01"}Ram${execi 10000 echo -e "\x02"}${memperc} \
${if_existing /sys/class/power_supply/AC0/online 1}${execi 10000 echo -e "\x01"}Bat${execi 10000 echo -e "\x02"}Ac${else}${execi 20 /home/ok/bin/battery}${endif} \
${execi 10000 echo -e "\x01"}Vol${execi 10000 echo -e "\x02"}${if_mixer_mute}M${else}${mixer}${endif} \
${execi 10000 echo -e "\x01"}*${execi 10000 echo -e "\x02"}${time %H:%M}
