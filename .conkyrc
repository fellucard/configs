out_to_x no
out_to_console yes
update_interval 2.0
if_up_strictness address

TEXT
${execpi 10 /home/ok/bin/conky-nowplaying} \
${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x07"}${cpu}%\
${if_up eth0}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x0B"}${downspeedf eth0}k${else}${if_up wlan0}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x0B"}${downspeedf wlan0}k${endif}${endif}\
${execi 10000 echo -e "\x01"}${if_match ${memperc} >= 90}${execi 10000 echo -e "\x03"}${else}${execi 10000 echo -e "\x08"}${endif}${memperc}%\
${if_existing /sys/class/power_supply/AC0/online 1}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x06"}${battery_percent}%${else}${execpi 30 /home/ok/bin/battery.sh}${endif}\
${if_mixer_mute}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x09"}M${else}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x09"}${mixer}%${endif}\
${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x14"}${time %H:%M}
