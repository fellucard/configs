out_to_x no
out_to_console yes
update_interval 2.0
if_up_strictness address

TEXT
${execpi 10 /home/ok/bin/conky-nowplaying} \
${if_existing /proc/eee/fsb 100 24 1}${execi 10000 echo -e "\x10"}${else}${execi 10000 echo -e "\x01"}${endif}${execi 10000 echo -e "\x07"}${cpu}%\
${if_up eth0}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x13"}${downspeedf eth0}k${execi 10000 echo -e "\x0B"}${upspeedf eth0}k${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x12"}${execpi 900 /home/ok/bin/pacman-up.pl}${else}${if_up wlan0}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x13"}${downspeedf wlan0}k${execi 10000 echo -e "\x0B"}${upspeedf wlan0}k${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x12"}${execpi 900 /home/ok/bin/pacman-up.pl}${endif}${endif}\
${if_match ${memperc} >= 90}${execi 10000 echo -e "\x15"} ${else}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x08"}${endif}${memperc}%\
${if_match ${hwmon 0 temp 1} >= 69}${execi 10000 echo -e "\x15"} ${else}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x0E"}${endif}${hwmon 0 temp 1}°\
${if_existing /sys/class/power_supply/AC0/online 1}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x06"}${battery_percent}%${else}${execpi 30 /home/ok/bin/battery.sh}${endif}\
${if_mixer_mute}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x09"}M${else}${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x09"}${mixer}%${endif}\
${execi 10000 echo -e "\x01"}${execi 10000 echo -e "\x14"}${time %H:%M}
