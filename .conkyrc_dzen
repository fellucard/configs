out_to_x no
out_to_console yes
update_interval 1.0
if_up_strictness address

TEXT
        ^fg(\#BF85CC)${cpu}%  \
^fg(\#A270A3)${loadavg 1}  \
^fg(\#8A2F58)${hwmon 0 temp 1}°     \
^fg(\#6096BF)${mem}     \
${if_up eth0}^fg(\#53A6A6)${downspeedf eth0}k  ^fg(\#287373)${upspeedf eth0}k     ${else}${if_up wlan0}^fg(\#53A6A6)${downspeedf wlan0}k  ^fg(\#287373)${upspeedf wlan0}k     ${endif}${endif}\
${execpi 30 /home/ok/Scripts/battery_dzen.sh}     \
${if_mpd_playing}^fg(\#E0E0E0)${endif}^ca(1,mpc prev)^i(/home/ok/.dzen/icons/prev.xbm)^ca()  ^ca(1,mpc toggle)^i(/home/ok/.dzen/icons/play.xbm)^i(/home/ok/.dzen/icons/pause.xbm)^ca()  ^ca(1,mpc next)^i(/home/ok/.dzen/icons/next.xbm)^ca()      \
^fg()^fg(\#899CA1)${if_up eth0}${execpi 300 /home/ok/Scripts/accuweather.sh "EUR|SK|LO000|BZOVIK"}°C  ${else}${if_up wlan0}${execpi 300 /home/ok/Scripts/accuweather.sh "EUR|SK|LO000|BZOVIK"}°C  ${endif}${endif}^fg()${time %a %d}  ^fg(\#E0E0E0)${time %H:%M}                      
