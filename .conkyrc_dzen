out_to_x no
out_to_console yes
update_interval 1.0
if_up_strictness address

TEXT
  \
^i(/home/ok/.dzen/icons/cpu.xbm) ^fg(\#BF85CC)${cpu} ^fg(\#7F62B3)^ca(1,/home/ok/Scripts/overclock.sh)${execpi 5 /home/ok/Scripts/eeecpufreq.sh}^ca() \
^fg()^i(/home/ok/.dzen/icons/temp.xbm) ^fg(\#8A2F58)${hwmon 0 temp 1} \
^fg()^ca(3, /home/ok/Scripts/fan_control.sh)^i(/home/ok/.dzen/icons/fs_02.xbm) ^fg(\#BF85CC)${execpi 10 /home/ok/Scripts/fan.sh}^ca() \
^fg()^i(/home/ok/.dzen/icons/mem.xbm) ^fg(\#6096BF)${execpi 20 /home/ok/Scripts/mem.sh} \
${if_up eth0}^fg()^i(/home/ok/.dzen/icons/net_wired.xbm) ^fg(\#53A6A6)${downspeedf eth0}${else}${if_up wlan0}^fg()^i(/home/ok/.dzen/icons/wifi_01.xbm) ^fg(\#53A6A6)${downspeedf wlan0}${else}^fg(\#333333)^i(/home/ok/.dzen/icons/net_wired.xbm) ^fg(\#914E89)N/A${endif}${endif} \
^fg()${execpi 30 /home/ok/Scripts/battery_dzen.sh} \
^fg()^ca(1,amixer set Master toggle)^ca(3,urxvtc -e alsamixer)^ca(4,amixer set Master 2dB+)^ca(5,amixer set Master 2dB-)${if_mixer_mute}^i(/home/ok/.dzen/icons/spkr_02.xbm) ^fg(\#5E468C)M${else}^i(/home/ok/.dzen/icons/spkr_01.xbm) ^fg(\#47959E)${mixer}${endif}^ca()^ca()^ca()^ca()  \
${execpi 3 /home/ok/Scripts/cmus-conky.sh}^ca(1,cmus-remote -r)^i(/home/ok/.dzen/icons/prev.xbm)^ca() ^ca(1,/home/ok/Scripts/cmus-toggle.sh)^i(/home/ok/.dzen/icons/play.xbm)^i(/home/ok/.dzen/icons/pause.xbm)^ca() ^ca(1,cmus-remote -n)^i(/home/ok/.dzen/icons/next.xbm)^ca()  \
^fg(\#999999)${time %H:%M}        
